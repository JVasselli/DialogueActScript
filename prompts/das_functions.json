    {
        "function_name": "Commit",
        "category": "General",
        "description": "Explicitly agrees or promises to take a future action, either in response to a request or as a declaration of intent. The action must be something the speaker is directly responsible for performing.",
        "function_examples": [
            {
                "example": "I'll send you the file tomorrow.",
                "das": "commit(action=send, object=file, time=tomorrow)"
            },
            {
                "example": "Yes, I'll take care of that.",
                "das": "commit(action=<context dependent (that)>)"
            },
            {
                "example": "You have my word on it.",
                "das": "commit(action=<context dependent (it)>, certainty=high)"
            },
            {
                "example": "I'll try",
                "das": "commit(action=<context dependent>, certainty=low)"
            }
        ]
    },
