[
    {
        "function_name": "Inquire",
        "category": "General",
        "description": "Seeks information or clarification. Includes direct questions or indirect inquiries.",
        "function_examples": [
            {
                "example": "What time does the meeting start?",
                "das": "inquire(topic=meeting_schedule, subject=meeting, timeframe=future, aspect=start_time)"
            },
            {
                "example": "How is this relevant?",
                "das": "inquire(topic=relevance, subject=topic, timeframe=current, aspect=reasoning)"
            },
            {
                "example": "How did you solve the problem?",
                "das": "inquire(topic=problem_solving, subject=solution, timeframe=past, aspect=method)"
            },
            {
                "example": "How satisfied are you with the service?",
                "das": "inquire(topic=satisfaction, subject=service, timeframe=current, aspect=degree)"
            },
            {
                "example": "How's your dad feeling after the surgery?",
                "das": "inquire(topic=health, subject=dad, context=post-surgery, timeframe=current, aspect=emotional_state)"
            },
            {
                "context": "The results were inconclusive.",
                "example": "What does that mean?",
                "das": "inquire(topic=statement_clarification, subject=results_statement, context=previous_statement, timeframe=current, aspect=interpretation)"
            },
            {
                "context": "The syntax was unclear.",
                "example": "syntax?",
                "das": "inquire(topic=word_definition, subject=syntax, aspect=meaning)"
            }
        ],
        "parameters" : [
            {
                "name": "topic",
                "description": "The main subject or focus of the question",
                "function_examples": [
                    "wellbeing",
                    "progress",
                    "adjustment",
                    "performance",
                    "location",
                    "time"
                ]
            },
            {
                "name": "subject",
                "description": "The entity being asked about (person, object, event, etc.).",
                "function_examples": [
                    "student",
                    "child",
                    "project",
                    "the policy"
                ]
            },
            {
                "name": "context",
                "description": "The specific situation or environment tied to the inquiry.",
                "function_examples": [
                    "nursery",
                    "event",
                    "meeting"
                ]
            },
            {
                "name": "timeframe",
                "description": "When the inquiry applies (past, present, future, or specific period).",
                "function_examples": [
                    "this_week",
                    "past_week",
                    "today",
                    "recently"
                ]
            },
            {
                "name": "aspect",
                "description": "he dimension or quality being asked about, specific to the type of question.  Particularly useful for how questions",
                "function_examples": [
                    "effort",
                    "emotional_state",
                    "method",
                    "means",
                    "degree"
                ]
            }
        ]
    },
